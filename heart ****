#include <stdio.h>

int main() 
{  
  int size = 6;
  int i,j;
  for (i=size/2;i<size;i+=2) 
  {
    for ( j=1;j<size-i;j+=2) 
	{
      printf(" ");
    }
    for (j=1;j<i+1;j++) 
	{
      printf("*");
    }
    for (j=1;j<size-i+1;j++) 
	{
      printf(" ");
    }
    for (j=1;j<i+1;j++) 
	{
      printf("*");
    }
    printf("\n");
  } 
  for (i=size;i>0;i--) 
  {
    for (j=0;j<size-i;j++) 
	{
      printf(" ");
    }
    for (j=1;j<i*2;j++)
	 {
      printf("*");
    }
    printf("\n");
  }
  return 0;
}
